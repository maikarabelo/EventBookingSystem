@model EventBookingSystem.Models.Event

<h2>Create Event</h2>

<form asp-action="Create" method="post">
	<div class="form-group">
		<label asp-for="EventName" class="control-label"></label>
		<input asp-for="EventName" required class="form-control" />
		<span asp-validation-for="EventName" class="text-danger"></span>
	</div>
	<div class="form-group mt-2">
		<label asp-for="EventDate" class="control-label"></label>
		<input asp-for="EventDate" required class="form-control" type="date" />
		<span asp-validation-for="EventDate" class="text-danger"></span>
	</div>
	<div class="form-group mt-2">
		<label asp-for="Description" class="control-label"></label>
		<textarea asp-for="Description" required class="form-control"></textarea>
		<span asp-validation-for="Description" class="text-danger"></span>
	</div>
	<!-- Event Type dropdown -->
	<div class="form-group mt-2">
		<label asp-for="EventTypeId" class="control-label"></label>
		<select asp-for="EventTypeId" class="form-control" required asp-items="@(ViewData["EventTypeId"] as SelectList)">
			<option value="">Select Event Type</option>
		</select>
		<span asp-validation-for="EventTypeId" class="text-danger"></span>
	</div>
	<div class="form-group mt-2">
		<label asp-for="VenueId" class="control-label"></label>
		
		<select asp-for="VenueId" class="form-control" required asp-items="@(ViewData["VenueId"] as SelectList)">
			<option value="">Select Venue</option>
		</select>
		<span asp-validation-for="VenueId" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary mt-2">Create</button>
	<a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
</form>


