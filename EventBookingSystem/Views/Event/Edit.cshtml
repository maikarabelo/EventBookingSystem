@model EventBookingSystem.Models.Event

@{
    ViewData["Title"] = "Edit Event";
}

<h2>Edit Event</h2>

<form asp-action="Edit" method="post">
    <div class="form-group">
        <label for="EventID">Event ID</label>
        <input asp-for="EventId" class="form-control" readonly />
        <span asp-validation-for="EventId" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label asp-for="EventName" class="control-label">Event Name</label>
        <input asp-for="EventName" required class="form-control" />
        <span asp-validation-for="EventName" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="EventDate" class="control-label">Event Date</label>
        <input asp-for="EventDate" required class="form-control" type="date" />
        <span asp-validation-for="EventDate" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="Description" class="control-label">Description</label>
        <textarea asp-for="Description" required class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="EventTypeId" class="control-label"></label>
        <select asp-for="EventTypeId" class="form-control" required asp-items="@(ViewData["EventTypeId"] as SelectList)">
            <option value="">Select Event Type</option>
        </select>
        <span asp-validation-for="EventTypeId" class="text-danger"></span>
    </div>

    <div class="form-group mt-2">
        <label asp-for="VenueId" class="control-label">Venue</label>
        <select asp-for="VenueId" class="form-control" required asp-items="@(ViewData["VenueId"] as SelectList)">
            <option value="">Select Venue</option>
        </select>
        <span asp-validation-for="VenueId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary mt-2">Save Changes</button>
        <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
    </div>
</form>