@model EventBookingSystem.Models.Event

@{
    ViewData["Title"] = "Delete Event";
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger" role="alert">
        @TempData["ErrorMessage"]
    </div>
}

<h2>Delete Event</h2>

<div>
    <h4>Are you sure you want to delete this event?</h4>
    <dl class="dl-horizontal">
        <dt>Event Name</dt>
        <dd>@Model.EventName</dd>
        <dt>Event Date</dt>
        <dd>@Model.EventDate.ToString("dd/MM/yyyy")</dd>
        <dt>Description</dt>
        <dd>@Model.Description</dd>
        <dt>Event Type</dt>
        <dd>@Model.EventType.Name</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="EventId" />
        <button type="submit" class="btn btn-danger mt-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
    </form>
</div>