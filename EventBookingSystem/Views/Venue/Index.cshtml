@model IEnumerable<EventBookingSystem.Models.Venue>

@{
    ViewData["Title"] = "All Venues";
}

<h1>Venues</h1>

<!-- Button to Create New Venue -->
<a asp-action="Create" class="btn btn-primary mb-2">Add New Venue</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Venue Name</th>
            <th>Location</th>
            <th>Capacity</th>
            <th>Image</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Any())
        {
            @foreach (var venue in Model)
            {
                <tr>
                    <td>@venue.VenueName</td>
                    <td>@venue.Location</td>
                    <td>@venue.Capacity</td>
                    <td>
                        @if (!string.IsNullOrEmpty(venue.ImageUrl))
                        {
                            <img src="@venue.ImageUrl" alt="Venue Image" width="100" height="100" />
                        }
                        else
                        {
                            <span>No Image</span>
                        }
                    </td>
                    <td>
                        <a href="@Url.Action("Edit", "Venue", new { id = venue.VenueId })" class="btn btn-primary">Edit</a>
                        <a href="@Url.Action("Delete", "Venue", new { id = venue.VenueId })" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
		else
		{
			<tr>
				<td colspan="5" class="text-center">No venues found.</td>
			</tr>
		}

    </tbody>
</table>

