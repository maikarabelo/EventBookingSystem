@model IEnumerable<EventBookingSystem.Models.Booking>
 
<!-- Search List Table -->
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Booking ID</th>
            <th>Customer Nmae</th>
            <th>Event</th>
            <th>Event Type</th>
            <th>Venue</th>
            <th>Booked On</th>
        </tr>
    </thead>
    <tbody>

        @if (Model != null && Model.Any())
        {
            @foreach (var booking in Model)
            {
                <tr>
                <td>@booking.BookingId</td>
                <td>@booking.Customer.FullName</td>
                <td>@booking.Event.EventName</td>
                <td>@booking.Event.EventType.Name</td>
                <td>@booking.Venue.VenueName</td>
                <td>@booking.BookingDate.ToString("dd/MM/yyyy")</td>
                </tr>
            }
        }
        else

        {
            <tr>
            <td colspan="4" class="text-center">No bookings found.</td>
            </tr>

        }
    </tbody>
</table>
<a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
 