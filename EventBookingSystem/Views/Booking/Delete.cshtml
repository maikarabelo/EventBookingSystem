@model EventBookingSystem.Models.Booking
 
@{
    ViewData["Title"] = "Delete Booking";
}

<h2>Delete Booking</h2>

<div>
    <h4>Are you sure you want to delete this Booking?</h4>
    <dl class="dl-horizontal">
        <dt>Customer Name</dt>
        <dd>@Model.Customer.FullName</dd>
        <dt>Event</dt>
        <dd>@Model.Event.EventName</dd>
        <dt>Venue</dt>
        <dd>@Model.Venue.VenueName</dd>
        <dt>Booking Date</dt>
        <dd>@Model.BookingDate.ToString("dd/MM/yyyy")</dd>
    </dl>
    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="BookingId" />
        <button type="submit" class="btn btn-danger mt-2">Delete</button>
        <a asp-action="Index" class="btn btn-secondary mt-2">Cancel</a>
    </form>
</div>